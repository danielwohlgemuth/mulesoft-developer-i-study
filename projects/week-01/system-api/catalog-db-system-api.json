{
  "openapi": "3.0.0",
  "info": {
    "title": "catalog-db-system-api",
    "version": "v1"
  },
  "paths": {
    "/categories": {
      "get": {
        "operationId": "List product categories",
        "responses": {
          "200": {
            "description": "",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "required": [
                    "categories"
                  ],
                  "properties": {
                    "categories": {
                      "type": "array",
                      "items": {
                        "$ref": "#/components/schemas/Category"
                      }
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ResponseError"
                }
              }
            }
          }
        },
        "servers": [
          {
            "url": "https://mulecart.com/{version}/system",
            "variables": {
              "version": {
                "default": "v1"
              }
            },
            "x-amf-parameters": {
              "version": {
                "default": "v1",
                "example": "v1",
                "type": "string"
              }
            }
          }
        ]
      }
    },
    "/products": {
      "get": {
        "operationId": "List all products",
        "responses": {
          "200": {
            "description": "",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "required": [
                    "products"
                  ],
                  "properties": {
                    "products": {
                      "type": "array",
                      "items": {
                        "$ref": "#/components/schemas/Product"
                      }
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ResponseError"
                }
              }
            }
          }
        },
        "servers": [
          {
            "url": "https://mulecart.com/{version}/system",
            "variables": {
              "version": {
                "default": "v1"
              }
            },
            "x-amf-parameters": {
              "version": {
                "default": "v1",
                "example": "v1",
                "type": "string"
              }
            }
          }
        ]
      }
    },
    "/products/{id}": {
      "get": {
        "operationId": "Retrieve product by ID",
        "parameters": [
          {
            "name": "id",
            "required": true,
            "in": "path",
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "content": {}
        },
        "responses": {
          "200": {
            "description": "",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "required": [
                    "product"
                  ],
                  "properties": {
                    "product": {
                      "$ref": "#/components/schemas/Product"
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ResponseError"
                }
              }
            }
          }
        },
        "servers": [
          {
            "url": "https://mulecart.com/{version}/system",
            "variables": {
              "version": {
                "default": "v1"
              }
            },
            "x-amf-parameters": {
              "version": {
                "default": "v1",
                "example": "v1",
                "type": "string"
              }
            }
          }
        ]
      }
    }
  },
  "components": {
    "schemas": {
      "Category": {
        "type": "object",
        "required": [
          "name"
        ],
        "properties": {
          "name": {
            "example": "Bedroom",
            "type": "string"
          }
        }
      },
      "ResponseError": {
        "type": "object",
        "required": [
          "message"
        ],
        "properties": {
          "message": {
            "example": "Couldn't find the product",
            "type": "string"
          }
        }
      },
      "Product": {
        "type": "object",
        "required": [
          "id",
          "name",
          "price",
          "image"
        ],
        "properties": {
          "id": {
            "example": "123e4567-e89b-42d3-a456-556642440000",
            "type": "string"
          },
          "name": {
            "example": "Lamp",
            "type": "string"
          },
          "price": {
            "example": "13.5",
            "type": "string"
          },
          "image": {
            "example": "https://media.mulecart.com/123e4567-e89b-42d3-a456-556642440000",
            "type": "string"
          }
        }
      }
    }
  }
}